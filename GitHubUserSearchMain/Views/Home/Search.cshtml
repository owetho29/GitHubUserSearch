@using GitHubUserSearchMain.Models
@using Octokit
@model List<GitHubUserSearchMain.Models.SearchUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if ((@Model.Count) > 0)
{
    <h1>The following users were found: </h1>

    <table style="width: 100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    URL
                </th>
                <th>
                    Details
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(SearchUser su in @Model)
            {
                <tr>
                    <td>@su.Name</td>
                    <td>@su.URL</td>
                    <td><button class="view">View Details</button></td>
                </tr>
                <tr class ="hidden">
                    @foreach (Repository r in @su.GitHubRepositories)
                    {
                        <td>@r.Name</td>
                        <td>@r.HtmlUrl</td>
                    }
                </tr>
            }
        </tbody>


    </table>
    
}
else
{
    <h1>No users found!</h1>
}

<script>
    $(document).ready(function () {
        $('.view').click(function () {
            
        });
    });
 </script>

